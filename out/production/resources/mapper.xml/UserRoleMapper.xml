<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiezhan.auth.mapper.UserRoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jiezhan.auth.model.entity.UserRole">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="role_id" property="roleId" />
    </resultMap>

    <!-- 根据userId获取其所有roleName -->
    <select id="selectRoleNamesByUserId" parameterType="java.lang.Integer" resultType="java.lang.String">
        SELECT
            b.role
        FROM
            user_role a,
            role b
        WHERE
            a.role_id = b.id
          AND user_id = #{userId}
    </select>

    <!-- 更新司机身份为乘客 -->
    <update id="updateDriverToUser">
        UPDATE user_role
        SET role_id = #{userRoleId}
        WHERE
            user_id = #{userId}
          AND role_id = #{driverRoleId}
    </update>

    <!-- 更新乘客身份为司机 -->
    <update id="updateUserToDriver">
        UPDATE user_role
        SET role_id = #{driverRoleId}
        WHERE
            user_id = #{userId}
          AND role_id = #{userRoleId}
    </update>

</mapper>
